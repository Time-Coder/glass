#ifndef __LAYOUT__
#define __LAYOUT__

#include <map>

#include "glass/VBO"
#include "glass/EBO"
#include "glass/VAO"
#include "glass/utils/glvector.h"

class Layout
{
	bool is_applied = false;

public:
	VAO vao;
	VBO vbo;
	EBO ebo;
	std::vector<uvec3> order_mat;
	std::map<uint, GLVector> defined_layouts;

public:
	Layout();
	GLVector& operator ()(uint location);
	const GLVector& operator ()(uint location)const;
	void order(const std::vector<uvec3>& _order_mat);
	void apply();
	void draw(GLenum type = GL_TRIANGLES);
	bool empty()const;
};

#endif