#ifndef __RBO__
#define __RBO__

#include "glass/BO"
#include "glass/common.h"

class Image;
class RBO: public BO
{
	struct RBO_Instance
	{
		uint width = 0;
		uint height = 0;
		uint dtype = GL_DEPTH24_STENCIL8;
	};

private:
	static std::unordered_map<uint, RBO_Instance> existing_RBOs;

public:
	RBO();
	RBO(uint _width, uint _height, uint _dtype = GL_DEPTH24_STENCIL8);
	RBO(const RBO& rbo);
	RBO(RBO&& rbo);
	RBO& operator =(const RBO& rbo);
	RBO& operator =(RBO&& rbo);

	bool empty()const;

	void malloc(uint _width, uint _height, uint __dtype);
	void realloc(uint _width, uint _height);

	uint width()const;
	uint height()const;
	uint dtype()const;
};

#endif